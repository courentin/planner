{% extends 'layout/default.html.twig' %}

{% block main_app %}
    <div class="container mt-5">
        <div class="row event_admin">
            <div class="col-md-12">
                <h1>Imaginarium Festival 2019</h1>
                <p class="text-muted">18 mai 2019 à 8h au 20 mai 2019 à 4h</p>
                <nav>
                    <div class="nav nav-tabs mt-5" id="myTab" role="tablist">
                        <a class="nav-item nav-link {{ app.request.get('_route') starts with 'event_show' ? 'active' }}" href="{{ path('event_show') }}">
                            <i class="fa fa-sm fa-calendar-week mr-2"></i>Planning
                        </a>
                        <a class="nav-item nav-link {{ app.request.get('_route') starts with 'event_tasks' ? 'active' }}" href="{{ path('event_tasks') }}">
                            <i class="fa fa-sm fa-list mr-2"></i>Tâches
                        </a>
                        <a class="nav-item nav-link {{ app.request.get('_route') starts with 'event_resources' ? 'active' }}" href="{{ path('event_resources') }}">
                            <i class="fa fa-sm fa-user mr-2"></i>Ressources
                        </a>
                        <a class="nav-item nav-link" href="#">
                            <i class="fa fa-sm fa-users mr-2"></i>Groupes
                        </a>
                        <a class="nav-item nav-link {{ app.request.get('_route') starts with 'event_settings' ? 'active' }}" href="{{ path('event_settings') }}">
                            <i class="fa fa-sm fa-cog mr-2"></i>Paramètres
                        </a>
                    </div>
                </nav>
                {% block event_container %}{% endblock %}
            </div>
        </div>
    </div>
{% endblock %}

