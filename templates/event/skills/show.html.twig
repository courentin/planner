{% extends 'event/skills/base.html.twig' %}

{% block event_container_tools %}
    {% if skill %}
    <a href="{{ path('event_skills_edit', {id: event.id, skill_id: skill.id}) }}" class="btn mb-3 btn-sm btn-primary"><i class="fa fa-pencil-alt mr-2"></i>Modifier</a>
    {% endif %}
{% endblock %}

{% block skills_container %}
    {% if skill %}
        <h3>{{ skill.name }}</h3>
        <p class="mt-3">{{ skill.description }}</p>
        <hr/>
        <p><strong>Permanenciers possédant cette compétence :</strong></p>
        {% for user in skill.users %}
            <p>{{ user }}</p>
        {% endfor %}
    {% else %}
        <div class="row mt-4">
            <div class="col-md-12 text-center">
                <h2 class="mt-3">Définir des compétences</h2>
                <p class="text-muted">Les compétences permettent d'autoriser certaines tâche à être réalisée par certain·e·s utilisateur·rice·s</p>
                <a href="{{ path('event_skills_new', {id: event.id}) }}" class="btn btn-primary"><i class="fa fa-plus"></i> Définir une nouvelle compétence</a>
            </div>
        </div>
    {% endif %}
{% endblock %}