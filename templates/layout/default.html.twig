{% extends 'layout/base.html.twig' %}

{% block body %}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="#">Planner</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" href="{{ path('index') }}">Evènements à venir <span class="badge-pill badge-danger">1</span></a>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Gérer des évènements
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <h6 class="dropdown-header">Mes évènements</h6>
                    <a class="dropdown-item" href="#">Imaginarium Festival 2019</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="#"><i class="fa fa-history mr-1"></i> Evènements passés</a>
                    <a class="dropdown-item" href="#"><i class="fa fa-plus-circle mr-1"></i> Créer un évènement</a>
                </div>
            </li>
        </ul>
        {% if app.user %}
        <div class="btn-group" role="group">
            <button id="btnGroupDrop1" type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <strong>{{ app.user.name }}</strong>
            </button>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="btnGroupDrop1">
                <a class="dropdown-item" href="#"><i class="fa fa-pencil-alt mr-2"></i>Modifier mon profil</a>
                <a class="dropdown-item text-danger" href="#"><i class="fa fa-sign-out-alt mr-2"></i>Deconnexion</a>
            </div>
        </div>
        {% endif %}
    </div>
</nav>
{% block main_app %}{% endblock %}
<footer style="height: 80px"></footer>
{% endblock %}
